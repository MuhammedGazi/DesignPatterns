@model RepositoryDesignPattern.EntityLayer.Concrete.Product
@{
	Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
	<br />
	<form method="post">
		<input type="hidden" asp-for="ProductID" />
		<label>Ürün Adı</label>
		<input type="text" class="form-control" asp-for="ProductName" />
		<br />
		<label>Ürün Stok Sayısı</label>
		<input type="text" class="form-control" asp-for="ProductStock" />
		<br />
		<label>Ürün Fiyatı</label>
		<input type="text" class="form-control" asp-for="ProductPrice" />
		<br />
		<label>Ürün Kategorisi</label>
		@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
		<br />
		<button class="btn btn-warning">Güncelle</button>
	</form>
</div>
